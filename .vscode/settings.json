{
    "[json][jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[markdown]": {
        "editor.unicodeHighlight.invisibleCharacters": false,
        "files.trimTrailingWhitespace": false,
        "workbench.editor.languageDetection": false
    },
    "breadcrumbs.enabled": false,
    "chat.agent.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.colorDecorators": false,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.occurrencesHighlight": "off",
    "editor.renderWhitespace": "all",
    "editor.stickyScroll.enabled": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmPasteNative": false,
    "extensions.ignoreRecommendations": true,
    "files.associations": {
        "*.hcl": "terraform"
    },
    "files.autoGuessEncoding": true,
    "files.defaultLanguage": "markdown",
    "files.exclude": {
        "**/.git": true,
        "**/.terraform": true
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/.git/**": true,
        "**/.terraform/**": true
    },
    "git.autofetch": false,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.ignoreMissingGitWarning": true,
    "git.openRepositoryInParentFolders": "never",
    "go.toolsManagement.autoUpdate": true,
    "go.useLanguageServer": true,
    "mcp": {
        "inputs": [
            {
                "description": "Backlog domain",
                "id": "backlog-domain",
                "password": false,
                "type": "promptString"
            },
            {
                "description": "Backlog API key",
                "id": "backlog-api-key",
                "password": true,
                "type": "promptString"
            },
            {
                "description": "GitHub Personal Access Token",
                "id": "github-token",
                "password": true,
                "type": "promptString"
            },
            {
                "description": "Notion Integration Secret",
                "id": "notion-integration-secret",
                "password": true,
                "type": "promptString"
            },
        ],
        "servers": {
            "aws-documentation": {
                "args": [
                    "run",
                    "--interactive",
                    "--rm",
                    "ghcr.io/astral-sh/uv:0.6.14-debian-slim",
                    "uvx",
                    "awslabs.aws-documentation-mcp-server@0.0.081004"
                ],
                "command": "docker"
            },
            "backlog": {
                "args": [
                    "run",
                    "--env",
                    "BACKLOG_API_KEY",
                    "--env",
                    "BACKLOG_DOMAIN",
                    "--interactive",
                    "--rm",
                    "ghcr.io/nulab/backlog-mcp-server:v0.1.0"
                ],
                "command": "docker",
                "env": {
                    "BACKLOG_API_KEY": "${input:backlog-api-key}",
                    "BACKLOG_DOMAIN": "${input:backlog-domain}"
                }
            },
            "github": {
                "args": [
                    "run",
                    "--env",
                    "GITHUB_PERSONAL_ACCESS_TOKEN",
                    "--interactive",
                    "--rm",
                    "ghcr.io/github/github-mcp-server:0.2.1"
                ],
                "command": "docker",
                "env": {
                    "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github-token}"
                }
            },
            "notion": {
                "args": [
                    "run",
                    "--env",
                    "OPENAPI_MCP_HEADERS",
                    "--interactive",
                    "--rm",
                    "public.ecr.aws/docker/library/node:22-slim",
                    "npx",
                    "-y",
                    "@notionhq/notion-mcp-server@v1.6.0"
                ],
                "command": "docker",
                "env": {
                    "OPENAPI_MCP_HEADERS": "{\"Authorization\": \"Bearer ${input:notion-integration-secret}\", \"Notion-Version\": \"2022-06-28\"}"
                }
            },
            "playwright": {
                "args": [
                    "run",
                    "--init",
                    "--interactive",
                    "--rm",
                    "mcr.microsoft.com/playwright/mcp:v0.0.24",
                ],
                "command": "docker"
            }
        }
    },
    "search.exclude": {
        "**/.git": true,
        "**/.terraform": true
    },
    "security.workspace.trust.enabled": false,
    "workbench.editor.decorations.badges": false,
    "workbench.editor.decorations.colors": false,
    "workbench.startupEditor": "none"
}
