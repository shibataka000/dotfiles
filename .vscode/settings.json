{
    "[json][jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[markdown]": {
        "editor.unicodeHighlight.invisibleCharacters": false,
        "files.trimTrailingWhitespace": false,
        "workbench.editor.languageDetection": false
    },
    "breadcrumbs.enabled": false,
    "chat.agent.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.colorDecorators": false,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.occurrencesHighlight": "off",
    "editor.renderWhitespace": "all",
    "editor.stickyScroll.enabled": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmPasteNative": false,
    "extensions.ignoreRecommendations": true,
    "files.associations": {
        "*.hcl": "terraform"
    },
    "files.autoGuessEncoding": true,
    "files.defaultLanguage": "markdown",
    "files.exclude": {
        "**/.git": true,
        "**/.terraform": true
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/.git/**": true,
        "**/.terraform/**": true
    },
    "git.autofetch": false,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.ignoreMissingGitWarning": true,
    "git.openRepositoryInParentFolders": "never",
    "go.toolsManagement.autoUpdate": true,
    "go.useLanguageServer": true,
    "search.exclude": {
        "**/.git": true,
        "**/.terraform": true
    },
    "security.workspace.trust.enabled": false,
    "workbench.editor.decorations.badges": false,
    "workbench.editor.decorations.colors": false,
    "workbench.startupEditor": "none",
    "mcp": {
        "servers": {
            "playwright": {
                "command": "docker",
                "args": [
                    "run",
                    "--interactive",
                    "--rm",
                    "--user=pwuser",
                    "mcr.microsoft.com/playwright:v1.51.1",
                    "npx",
                    "-y",
                    "@playwright/mcp@v0.0.9",
                    "--executable-path=/ms-playwright/chromium-1161/chrome-linux/chrome",
                    "--headless"
                ]
            },
            "aws-documentation": {
                "command": "docker",
                "args": [
                    "run",
                    "--interactive",
                    "--rm",
                    "ghcr.io/astral-sh/uv:0.6.14-debian-slim",
                    "uvx",
                    "awslabs.aws-documentation-mcp-server@0.0.081004"
                ]
            },
            "notion": {
                "command": "docker",
                "args": [
                    "run",
                    "--env",
                    "OPENAPI_MCP_HEADERS={\"Authorization\": \"Bearer ntn_****\", \"Notion-Version\": \"2022-06-28\"}",
                    "--interactive",
                    "--rm",
                    "public.ecr.aws/docker/library/node:22-slim",
                    "npx",
                    "-y",
                    "@notionhq/notion-mcp-server@v1.6.0"
                ]
            }
        }
    }
}
