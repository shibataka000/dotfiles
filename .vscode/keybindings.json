[
    {
        "key": "ctrl+shift+down",
        "command": "cursorColumnSelectDown"
    },
    {
        "key": "ctrl+shift+up",
        "command": "cursorColumnSelectUp"
    },
    {
        "key": "ctrl+k",
        "command": "deleteAllRight",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+a",
        "command": "cursorHome",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+e",
        "command": "cursorEnd",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+w",
        "command": "workbench.action.closeWindow",
        "when": "!editorIsOpen && !multipleEditorGroups"
    },
    {
        "key": "ctrl+k ctrl+v",
        "command": "markdown.showPreviewToSide",
        "when": "!notebookEditorFocused && (editorLangId == 'markdown' || editorLangId == 'instructions')"
    },
    {
        "key": "ctrl+k ctrl+t",
        "command": "workbench.action.tasks.runTask"
    },
    {
        "key": "ctrl+k ctrl+s",
        "command": "workbench.action.files.saveWithoutFormatting"
    }
]
